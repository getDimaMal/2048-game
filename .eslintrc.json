{
  "parser": "@typescript-eslint/parser",
  "plugins": ["import", "@typescript-eslint"],
  "extends": [
    "plugin:@typescript-eslint/recommended", "plugin:import/warnings", "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "ignorePatterns": [".next/", "node_modules/", "public/", "*.config.[tj]s"],
  "rules": {
    "import/order": [
      "error", {
        "groups": [["external", "builtin"], ["internal"], ["parent"], ["sibling", "index"]],
        "pathGroups": [
          {
            "pattern": "*.scss",
            "group": "index",
            "position": "after"
          }
        ],
        "newlines-between": "always",
        // Enforces blank line between groups
        "alphabetize": {
          "order": "asc",
          // Sort in ascending order
          "caseInsensitive": true
          // Ignore case
        }
      }
    ],
    "import/newline-after-import": [
      "error", {
        "count": 2
        // Ensures at least two newline after the last import
      }
    ],
    "import/no-duplicates": "error"
  }
}